# Environment Configuration
# Copy this file to .env.local for local development
# For production, set these variables in your hosting platform (Vercel/Netlify)

# App Configuration
VITE_APP_NAME="Learning Management System"
VITE_APP_URL="https://your-domain.com"
VITE_APP_VERSION="1.0.0"

# API Configuration
VITE_API_BASE_URL="https://your-api-domain.com/api"
VITE_API_TIMEOUT="30000"

# Authentication
VITE_AUTH_DOMAIN="your-auth-domain.com"
VITE_AUTH_CLIENT_ID="your-client-id"
VITE_AUTH_REDIRECT_URI="https://your-domain.com/callback"

# Database (if using client-side database)
VITE_DB_NAME="lms_database"
VITE_DB_VERSION="1"

# External Services
VITE_STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Analytics
VITE_GA_TRACKING_ID="G-XXXXXXXXXX"
VITE_MIXPANEL_TOKEN="your-mixpanel-token"

# File Upload
VITE_UPLOAD_URL="https://your-upload-domain.com/upload"
VITE_MAX_FILE_SIZE="10485760" # 10MB in bytes

# Feature Flags
VITE_ENABLE_AI_FEATURES="true"
VITE_ENABLE_SOCIAL_FEATURES="true"
VITE_ENABLE_NOTIFICATIONS="true"
VITE_ENABLE_ANALYTICS="true"

# Internationalization
VITE_DEFAULT_LOCALE="en"
VITE_SUPPORTED_LOCALES="en,es,fr,de,it,pt,ja,ko,zh,ar,nl"

# Development/Production
NODE_ENV="production"
VITE_NODE_ENV="production" 